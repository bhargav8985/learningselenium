<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </Console>

        <!-- General File Appender (INFO, DEBUG, WARN) -->
        <File name="FileLogger" fileName="logs/app.log" append="true">
            <Filters>
                <ThresholdFilter level="error"
                                 onMatch="DENY"
                                 onMismatch="ACCEPT"/>
            </Filters>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </File>

        <!-- Error File Appender (ERROR, FATAL) -->
        <File name="ErrorFileLogger" fileName="logs/error.log" append="true">
            <Filters>
                <ThresholdFilter level="error"
                                 onMatch="ACCEPT"
                                 onMismatch="DENY"/>
            </Filters>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>

        <!-- Application Package Logger -->
        <Logger name="com.vimo" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="ErrorFileLogger"/>
        </Logger>

        <!-- Root Logger (Safety Net) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>

</Configuration>
